<style>
    @font-face {
    font-family: 'prompt-medium';  /* Define the font's name */
    src: url('/fonts/prompt-medium.woff2') format('woff2');  /* URL to the font file */
    font-weight: normal;
    font-style: normal;
}
* {
    font-family: 'prompt-medium';
}
    /* General Mega Menu Styles */
    .mega-menu {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #ffffff;
        color: #fff;
        padding: 10px 20px;
        flex-wrap: wrap;
    }

    .mega-menu .logo img {
        height: 50px;
    }

    .nav-list {
        list-style: none;
        display: flex;
        gap: 20px;
        margin: 0;
        padding: 0;
        flex-wrap: wrap;
    }

    .nav-list li {
        position: relative;
    }

    .nav-list a {
        text-decoration: none;
        color: black;
        padding: 10px 15px;
        display: inline-block;
    }

    .nav-list a:hover {
        background-color: #ff6060;
        border-radius: 5px;
    }

    /* Dropdown Menu */
    .dropdown {
        position: relative;
    }

    .dropdown .dropbtn {
        background-color: inherit;
        color: rgb(0, 0, 0);
        font-size: 18px;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
    }

    .dropdown:hover .dropbtn {
        background-color: #ff6060;
        border-radius: 5px;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        color: #333;
        top: 100%;
        left: 0;
        width: 600px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        padding: 20px;
        z-index: 1;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown-content .header {
        background: #444;
        color: white;
        padding: 10px;
        text-align: center;
        font-size: 18px;
        margin-bottom: 10px;
    }

    .dropdown-content .row {
        display: flex;
        gap: 20px;
    }

    .dropdown-content .column {
        flex: 1;
        padding: 10px;
    }

    .dropdown-content .column h3 {
        margin-bottom: 10px;
        color: #444;
    }

    .dropdown-content .column a {
        color: #333;
        text-decoration: none;
        padding: 5px 0;
        display: block;
    }

    .dropdown-content .column a:hover {
        background-color: #ddd;
        border-radius: 3px;
        padding-left: 5px;
    }

    /* Search Bar */
    .search-bar {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .search-bar img {
        width: 20px;
        height: 20px;
    }

    .search-bar span {
        color: white;
        font-size: 14px;
    }

    /* Responsive Styles */
    @media screen and (max-width: 768px) {
        .mega-menu {
            flex-wrap: wrap;
        }

        .nav-list {
            flex-wrap: wrap;
            gap: 10px;
        }

        .dropdown-content {
            width: 100%;
        }

        .dropdown-content .row {
            flex-direction: column;
            gap: 10px;
        }
    }
</style>

